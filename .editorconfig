# EditorConfig is awesome: http://EditorConfig.org/

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.py]
indent_style = space
indent_size = 4

[*.rb]
indent_style = space
indent_size = 2

[*.coffee]
indent_style = space
indent_size = 4

[*.{js,jsx,json}]
indent_style = space
indent_size = 2

[*.{css,scss,scssm}]
indent_style = space
indent_size = 2

[*.{html,djhtml}]
indent_style = space
indent_size = 2

[*.as]
indent_style = space
indent_size = 4

[*.{xml,mxml}]
indent_style = space
indent_size = 4

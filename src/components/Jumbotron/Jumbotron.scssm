@import '../../styles/variables';

.Jumbotron {
  display: flex;
  align-items: center;
  justify-content: center;

  .text-container {
    z-index: 4;
    text-align: center;

    h1 {
      padding-bottom: 20px;
      border-bottom: 1px solid $light;
      border-bottom-color: $overcast;
      color: $light;
      margin-bottom: 10px;
      font-size: 63px;
    }

    p {
      font-size: 28px;
      color: $light;
      margin: 0 0 10px;
    }
  }

  .overlay-container {
    background-color: $paperDark;
    position: absolute;
    top: 0px;
    bottom: 0px;
    left: 0px;
    right: 0px;
    z-index: 2;
    overflow: hidden;

    video {
      height: auto;
      width: auto;
    }
  }

  .scroll-down {
    height: 80px;
    width: 110px;
    position: absolute;
    bottom: 0px;
    right: 5%;
    background: $light;
    text-align: center;
    z-index: 6;

    font-size: 30px;
    color: $dark;

    border: 0;
    padding: 0;

    outline: none;
    cursor: pointer;

    border-bottom-left-radius: 0;
    border-bottom-right-radius: 0;

    &:hover, &:active {
      color: $cyan;
    }
  }
}

@import '../../../styles/variables';

.Projects {
  padding: 40px 180px;

  h2 {
    font-size: 54px;
    text-align: center;
    margin: 10px 0 5px;
  }

  h2, h3 {
    font-weight: 300;
    color: $cyan;
  }

  p {
    font-size: 21px;
    margin-top: 0;
    text-align: center;
    color: $textColor;
    margin-bottom: 25px;
    font-style: italic;
  }

  hr {
    margin: 40px 0px;
    opacity: 0.2;
    border: 0;
    border-top: 1px solid $borderDark;
  }

  .content {
  }
}

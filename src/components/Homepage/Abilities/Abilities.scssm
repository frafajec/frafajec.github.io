@import '../../../styles/variables';

.Abilities {
  h2 {
    font-size: 54px;
    text-align: center;
    margin: 10px 0 5px;
  }

  h2, h3 {
    font-weight: 300;
    color: $cyan;
  }

  p {
    font-size: 21px;
    margin-top: 0;
    text-align: center;
    color: $text;
    margin-bottom: 25px;
    font-style: italic;
  }

  hr {
    margin: 40px 0px;
    opacity: 0.2;
    border: 0;
    border-top: 1px solid $border;
  }

  .content {
    .section-column {
      position: relative;
      display: inline-block;
      width: 50%;
    }
  }
}

.StarContainer {
  .text {
    display: inline-block;
    width: 60%;
  }

  .stars {
    display: inline-block;
  }
}

.StarsList {
  .star {
    display: inline-block;
    color: $cyan;
    font-size: 13px;
  }
}
